{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
  "files": {
    "ignore": [
      "node_modules",
      "dist",
      "build",
      "coverage",
      ".vscode",
      ".idea",
      ".DS_Store",
      ".env",
      ".env.local",
      ".env.development",
      ".env.test",
      ".env.production",
      ".env.*.local",
      "npm-debug.log*",
      "yarn-debug.log*",
      "yarn-error.log*",
      "package-lock.json",
      ".pnp.*",
      ".pnp.js",
      ".eslintcache",
      ".cache",
      ".next",
      ".nuxt",
      ".next",
      "dist",
      "out",
      "public"
    ]
  },
	"organizeImports": {
    "enabled": true 
  },
  "formatter": {
    "indentStyle": "tab"
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "indentWidth": 2,
      "quoteStyle": "single",
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "trailingComma": "all",
      "bracketSpacing": true,
      "semicolons": "asNeeded",
      "arrowParentheses": "asNeeded",
      "lineWidth": 100,
      "lineEnding": "lf",
      "attributePosition": "multiline",
      "bracketSameLine": false
    }
  },
	"linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "all": true,
      "performance": {
        "noReExportAll": "error"
      },
      "style": {
        "noVar": "error"
      },
      "complexity": {
        "noUselessEmptyExport": "error",
        "noUselessLoneBlockStatements": "error",
        "noMultipleSpacesInRegularExpressionLiterals": "error",
        "useArrowFunction": "warn"
      },
      "suspicious": {
        "noShadowRestrictedNames": "error",
        "useAwait": "error"
      },
      "nursery": {
        "noConsole": "error"
      }
    }
  }
}
